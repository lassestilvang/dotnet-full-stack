@page "/"

<PageTitle>InventoryHub - Home</PageTitle>

<div class="home-container">
    <section class="hero">
        <h1>Welcome to InventoryHub</h1>
        <p class="tagline">A full-stack inventory management system built with .NET and Blazor</p>
        <a href="/inventory" class="btn btn-primary btn-large">
            Go to Inventory
        </a>
    </section>

    <section class="features">
        <h2>Features</h2>
        <div class="feature-grid">
            <div class="feature-card">
                <div class="feature-icon">📦</div>
                <h3>CRUD Operations</h3>
                <p>Create, read, update, and delete inventory items with ease.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔗</div>
                <h3>API Integration</h3>
                <p>Seamless front-end to back-end communication via RESTful APIs.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📊</div>
                <h3>Structured JSON</h3>
                <p>Consistent API responses with proper error handling.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>Optimized Performance</h3>
                <p>Pagination, caching, and response compression for speed.</p>
            </div>
        </div>
    </section>

    <section class="tech-stack">
        <h2>Technology Stack</h2>
        <div class="tech-badges">
            <span class="tech-badge">.NET 10</span>
            <span class="tech-badge">Blazor WebAssembly</span>
            <span class="tech-badge">ASP.NET Core</span>
            <span class="tech-badge">C#</span>
            <span class="tech-badge">RESTful API</span>
        </div>
    </section>
</div>
